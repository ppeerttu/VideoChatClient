{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "globals": {
    "React": true
  },

  "extends": "eslint:recommended",

  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },

  "plugins": [
    "react",
    "react-native"
  ],

  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
